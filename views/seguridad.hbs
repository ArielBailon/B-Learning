<h5>Pilotos</h5>
<br>
<div style="width: 200px;" class="float-right">
    <form method="POST" action="/admin/nuevaFicha">
        <button class="btn btn-success" type="submit">Restablecer fichas médicas</button>
    </form>
</div>
<br>

<div class="text-nowrap">

    <table id="data_table" class="table table-hover table-sm .table-bordered " border="2">
        <thead style="background:#626262; color:#fff">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Piloto</th>
                <th scope="col">Horas de vuelo</th>
                <th scope="col">Ficha Médica realizada</th>
            </tr>
        </thead>
        <tbody>
            {{#each usuarios}}
            <tr>
                <th scope="row">{{counter @index}}</th>
                <td>{{nombres}} {{apellidos}}</td>
                <td>{{horasVoladas}}</td>
                {{#if_equal ficha true}}
                <td>Si</td>
                {{else}}
                <td>No</td>
                {{/if_equal}}
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<div class="mx-auto" style="width: 200px;">
    <button style="" type="button" class="btn btn-primary" onclick="window.print()">
        Imprimir
    </button>
</div>